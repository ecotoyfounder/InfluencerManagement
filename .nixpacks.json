{
  "phases": {
    "setup": {
      "nixpkgs": ["nodejs-18_x", "python39"]
    },
    "install": {
      "commands": [
        "cd backend && pip install -r requirements.txt",
        "cd frontend && npm install"
      ]
    },
    "build": {
      "commands": ["cd frontend && npm run build"]
    },
    "start": {
      "commands": ["npm run start"]
    }
  }
}
